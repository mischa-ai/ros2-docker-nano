FROM dustynv/ros:iron-ros-base-l4t-r32.7.1

# Docker image preparation

ARG USERNAME=ros
ARG USER_UID=1000
ARG USER_GID=$USER_UID

RUN groupadd --gid $USER_GID $USERNAME \
    && useradd -s /bin/bash --uid $USER_UID --gid $USER_GID -m $USERNAME \
    && mkdir /home/$USERNAME/.config \
    && chown -R $USER_UID:$USER_GID /home/$USERNAME \
    && echo "source /opt/ros/iron/setup.bash" >> $HOME/.bashrc

ENV HOME /home/$USERNAME
ENV USER $USERNAME

RUN apt-get update \
    && apt-get install -y \
        python3-pygraphviz \
        python3-rospkg \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean


# Ros2 package installation

RUN mkdir -p $HOME/ros2_ws/src
WORKDIR $HOME/ros2_ws

RUN git clone https://github.com/ros-controls/ros2_control.git ./src/ros2_control
RUN git clone https://github.com/ros-controls/ros2_controllers.git ./src/ros2_controllers

ADD https://raw.githubusercontent.com/ros-controls/ros2_control/master/ros2_control.iron.repos ./src/ros2_control.repos
RUN vcs import < ./src/ros2_control.repos


# Source ROS and update dependencies
RUN . /opt/ros/iron/install/setup.sh \
    && rosdep update \
    && rosdep install  -r -y --from-paths ./src

# Build only the specific package
RUN . /opt/ros/iron/install/setup.sh \
    && colcon build \
        --cmake-args \
            -DCMAKE_CXX_STANDARD=17 \
        --packages-select \
            ros2_control \
            ros2-controllers \
            control_msgs \
            controller_manager_msgs \
            joint_limits \
            realtime_tools \
            ros2_control_test_assets \
            hardware_interface \
            controller_interface \
            transmission_interface \
            controller_manager \
            ros2controlcli


# Source ros2_control workspace
#RUN echo "source /opt/ros/iron/install/setup.bash" >> $HOME/.bashrc
#RUN echo "source ./install/local_setup.bash" >> $HOME/.bashrc

COPY entrypoint.sh /entrypoint.sh

ENTRYPOINT ["/bin/bash", "/entrypoint.sh"]

CMD ["bash"]
